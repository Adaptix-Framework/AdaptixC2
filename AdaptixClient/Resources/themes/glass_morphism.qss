/* Glassmorphism Theme - Adaptix Edition */
/* @theme-type: dark */

QWidget[Main="base"] {
    background-color: #0F172A;
    color: #F8FAFC;
}

QWidget:disabled[Main="base"] {
    background-color: #0F172A;
    color: #475569;
}



QDialog, QInputDialog, QColorDialog, QFileDialog {
    background-color: #0F172A;
    color: #F8FAFC;
}



QLabel[LabelStyle="console"] {
    padding: 4px;
    color: #F8FAFC;
    background-color: transparent;
}

QLabel {
    padding: 4px;
    color: #F8FAFC;
    background-color: transparent;
}

QLabel:disabled {
    color: #475569;
}




QPushButton[ButtonStyle="dialog"] {
    background-color: rgba(30, 41, 59, 0.7);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 8px;
    border-radius: 4px;
    color: #F8FAFC;
}

QPushButton[ButtonStyle="dialog_apply"] {
    background-color: rgba(30, 41, 59, 0.7);
    border: 1px solid #38BDF8;
    padding: 8px;
    border-radius: 4px;
    color: #F8FAFC;
}

QPushButton {
    background-color: rgba(30, 41, 59, 0.7);
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 4px;
    border-radius: 4px;
    color: #F8FAFC;
}

QPushButton:hover {
    background-color: rgba(56, 189, 248, 0.2);
    border: 1px solid #38BDF8;
    color: #38BDF8;
}

QPushButton:disabled {
    background-color: rgba(15, 23, 42, 0.5);
    color: #475569;
    border: 1px solid rgba(255, 255, 255, 0.05);
}



QLineEdit[LineEditStyle="console"] {
    background-color: rgba(0, 0, 0, 0.4);
    color: #F8FAFC;
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 4px;
    border-radius: 4px;
}

QLineEdit {
    background-color: rgba(0, 0, 0, 0.4);
    color: #F8FAFC;
    border: 1px solid rgba(255, 255, 255, 0.1);
    padding: 4px;
    border-radius: 4px;
}

QLineEdit:focus {
    border: 1px solid #38BDF8;
}

QLineEdit:disabled {
    background-color: rgba(0, 0, 0, 0.2);
    color: #475569;
    border: 1px solid rgba(255, 255, 255, 0.05);
}




QTableWidget {
    background-color: rgba(15, 23, 42, 0.6);
    alternate-background-color: rgba(30, 41, 59, 0.4);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: #F8FAFC;
    border-radius: 4px;
}

QHeaderView::section {
    color: #94A3B8;
    padding: 4px;
    background: qlineargradient(
        x1: 0, y1: 0, x2: 0, y2: 1,
        stop: 0 rgba(30, 41, 59, 0.8),
        stop: 1 rgba(15, 23, 42, 0.8)
    );
    border: none;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
    border-right: 1px solid rgba(255, 255, 255, 0.1);
    font-weight: bold;
}

QTableWidget::item {
    padding-left: 8px;
    padding-right: 8px;
    border: none;
}

QTableWidget::item:selected {
    background-color: rgba(56, 189, 248, 0.3);
    color: #38BDF8;
    outline: none;
}

QTableWidget:disabled {
    background-color: rgba(15, 23, 42, 0.3);
    color: #475569;
    border: 1px solid rgba(255, 255, 255, 0.05);
}



QTableView {
    background-color: rgba(15, 23, 42, 0.6);
    alternate-background-color: rgba(30, 41, 59, 0.4);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: #F8FAFC;
    border-radius: 4px;
}

QTableView::item {
    padding-left: 8px;
    padding-right: 8px;
    border: none;
}

QTableView::item:selected {
    background-color: rgba(56, 189, 248, 0.3);
    color: #38BDF8;
    outline: none;
}

QTableView:disabled {
    background-color: rgba(15, 23, 42, 0.3);
    color: #475569;
    border: 1px solid rgba(255, 255, 255, 0.05);
}




QTreeWidget {
    background-color: rgba(15, 23, 42, 0.6);
    alternate-background-color: rgba(30, 41, 59, 0.4);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: #F8FAFC;
    border-radius: 4px;
}

QTreeWidget::item {
    border: none;
    padding: 4px;
    color: #F8FAFC;
}

QTreeWidget::item:selected {
    background-color: rgba(56, 189, 248, 0.3);
    color: #38BDF8;
}

QTreeWidget::item:hover {
    background-color: rgba(255, 255, 255, 0.05);
    color: #F8FAFC;
}

QTreeWidget:disabled {
    background-color: rgba(15, 23, 42, 0.3);
    color: #475569;
}





QMenu {
    background-color: rgba(15, 23, 42, 0.9);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 3px;
    padding: 3px;
}

QMenu::item {
    padding: 5px 10px;
    color: #F8FAFC;
    border-radius: 3px;
}

QMenu::item:selected {
    background-color: rgba(56, 189, 248, 0.3);
    color: #38BDF8;
    border: none;
    background: qlineargradient(
        x1: 0, y1: 0, x2: 0, y2: 1,
        stop: 0 rgba(56, 189, 248, 0.4),
        stop: 1 rgba(56, 189, 248, 0.2)
    );
}

QMenu::separator {
    height: 1px;
    background: rgba(255, 255, 255, 0.1);
    margin: 3px 5px;
}

QMenu:disabled {
    background-color: rgba(15, 23, 42, 0.5);
    color: #475569;
}





QMenuBar {
    background-color: rgba(15, 23, 42, 0.8);
    color: #F8FAFC;
    padding: 4px;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

QMenuBar::item {
    background-color: transparent;
    padding: 4px 4px;
    margin: 0px 4px;
    color: #F8FAFC;
    border-radius: 4px;
}

QMenuBar::item:selected {
    background-color: rgba(56, 189, 248, 0.2);
    color: #38BDF8;
}

QMenuBar::item:pressed {
    background-color: rgba(56, 189, 248, 0.3);
    color: #38BDF8;
    border: none;
}

QMenuBar:disabled {
    background-color: rgba(15, 23, 42, 0.5);
    color: #475569;
}





QTextEdit[TextEditStyle="console"] {
    background-color: rgba(0, 0, 0, 0.4);
    color: #F8FAFC;
    border: 0px;
    padding: 2px;
    border-radius: 0px;
}

QTextEdit {
    background-color: rgba(15, 23, 42, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: #F8FAFC;
    padding: 2px;
    border-radius: 4px;
}

QTextEdit:disabled {
    background-color: rgba(15, 23, 42, 0.3);
    color: #475569;
}

QPlainTextEdit {
    background-color: rgba(15, 23, 42, 0.6);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: #F8FAFC;
    padding: 2px;
    border-radius: 4px;
}

QPlainTextEdit:disabled {
