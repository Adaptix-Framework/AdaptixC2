}




QAbstractItemView#Completer {
    background-color: rgba(15, 23, 42, 0.95);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 6px;
    color: #F8FAFC;
    padding: 2px;
    outline: none;
    selection-background-color: rgba(56, 189, 248, 0.3);
    selection-color: #38BDF8;
}

QAbstractItemView#Completer::item {
    padding: 2px 6px;
    border-radius: 4px;
}

QAbstractItemView#Completer::item:selected {
    background: qlineargradient(
        x1: 0, y1: 0, x2: 1, y2: 0,
        stop: 0 rgba(56, 189, 248, 0.4),
        stop: 1 rgba(129, 140, 248, 0.4)
    );
    color: #38BDF8;
}





QGroupBox {
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 6px;
    margin-top: 20px;
    background-color: rgba(255, 255, 255, 0.02);
    padding: 10px;
    color: #F8FAFC;
}

QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top center;
    padding: 0 3px;
    background-color: #0F172A;
    color: #38BDF8;
    border-radius: 3px;
}





QCheckBox {
    spacing: 5px;
    color: #F8FAFC;
    background-color: transparent;
}

QCheckBox::indicator {
    width: 16px;
    height: 16px;
    background-color: rgba(0, 0, 0, 0.4);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 3px;
}

QCheckBox::indicator:hover {
    border: 1px solid #38BDF8;
    background-color: rgba(56, 189, 248, 0.1);
}

QCheckBox::indicator:checked {
    background-color: rgba(56, 189, 248, 0.3);
    border: 1px solid #38BDF8;
    image: url(:/icons/check);
}

QCheckBox::indicator:unchecked {
    background-color: rgba(0, 0, 0, 0.4);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

QCheckBox::indicator:indeterminate {
    background-color: rgba(56, 189, 248, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.1);
}

QCheckBox:disabled {
    color: #475569;
}

QCheckBox::indicator:disabled {
    background-color: rgba(0, 0, 0, 0.2);
    border: 1px solid rgba(255, 255, 255, 0.05);
}





QListWidget {
    background-color: rgba(15, 23, 42, 0.6);
    alternate-background-color: rgba(30, 41, 59, 0.4);
    border: 1px solid rgba(255, 255, 255, 0.1);
    color: #F8FAFC;
    border-radius: 4px;
    padding: 5px;
}

QListWidget::item {
    padding: 6px 4px;
    margin: 2px 0px;
    border-radius: 4px;
    color: #F8FAFC;
}

QListWidget::indicator {
    width: 16px;
    height: 16px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 3px;
    background-color: rgba(255, 255, 255, 0.05);
}

QListWidget::indicator:checked {
    background-color: rgba(56, 189, 248, 0.3);
    border: 1px solid #38BDF8;
    image: url(:/icons/check);
}

QListWidget::indicator:unchecked:hover {
    border: 1px solid #38BDF8;
    background-color: rgba(56, 189, 248, 0.1);
}

QListWidget::item:hover {
    background-color: rgba(255, 255, 255, 0.05);
    color: #F8FAFC;
}

QListWidget::item:selected {
    background-color: rgba(56, 189, 248, 0.3);
    color: #38BDF8;
    border: none;
    margin: 1px;
}

QListWidget:focus {
    outline: none;
}



CardListWidget {
    background-color: transparent;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 4px;
    padding: 4px;

    qproperty-itemBackground: rgba(255, 255, 255, 0.03);
    qproperty-itemBackgroundHover: rgba(255, 255, 255, 0.08);
    qproperty-itemBackgroundSelected: rgba(56, 189, 248, 0.2);
    qproperty-titleColor: #F1F5F9;
    qproperty-titleColorSelected: #38BDF8;
    qproperty-subtitleColor: #94A3B8;
    qproperty-subtitleColorSelected: #7DD3FC;
}

CardListWidget::item {
    border: none;
    border-radius: 4px;
}

CardListWidget::item:selected {
    background: transparent;
}

CardListWidget::item:hover {
    background: transparent;
}



QFrame[frameShape="4"], QFrame[frameShape="5"] {
    color: rgba(255, 255, 255, 60);
    background-color: rgba(255, 255, 255, 60);
}

QFrame[frameShape="4"]:disabled, QFrame[frameShape="5"]:disabled {
    color: rgba(255, 255, 255, 20);
    background-color: rgba(255, 255, 255, 20);
}
